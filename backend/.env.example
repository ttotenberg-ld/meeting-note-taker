# Google Gemini API key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth credentials (download from Google Cloud Console)
GOOGLE_CREDENTIALS_PATH=./credentials.json
GOOGLE_TOKEN_PATH=./token.json

# Where to save raw meeting transcripts (.md files)
# This should point to a folder inside your Obsidian vault
TRANSCRIPT_DIR=/path/to/your/obsidian/vault/MeetingNotes/transcripts

# Where to save structured meeting notes (.md files)
# This should also be inside your Obsidian vault
NOTES_DIR=/path/to/your/obsidian/vault/MeetingNotes/notes

# Google Drive folder name for uploading notes as Google Docs
DRIVE_FOLDER_NAME=notes

# Obsidian vault name (as it appears in Obsidian's vault switcher)
OBSIDIAN_VAULT_NAME=your_vault_name

# Path from the vault root to the notes folder (used for Obsidian URI links)
# This should match the relative path from your vault root to NOTES_DIR
OBSIDIAN_NOTES_SUBPATH=MeetingNotes/notes
